<div>
    <h4 style="border-bottom: 3px solid black">Tagok</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Members.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Members.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Members.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Members.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Members.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Members.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Members.RegistrationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Members.RegistrationDate)
