@page
@model Library_Project.Pages.Admin.Member.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Létrehoz</h1>

<h4 style="border-bottom: 3px solid black">Tagok</h4>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Members.FirstName" class="control-label"></label>
                <input asp-for="Members.FirstName" class="form-control" />
                <span asp-validation-for="Members.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Members.LastName" class="control-label"></label>
                <input asp-for="Members.LastName" class="form-control" />
                <span asp-validation-for="Members.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Members.Email" class="control-label"></label>
                <input asp-for="Members.Email" class="form-control" />
                <span asp-validation-for="Members.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Members.RegistrationDate" class="control-label"></label>
                <input asp-for="Members.RegistrationDate" class="form-control" />
                <span asp-validation-for="Members.RegistrationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehoz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" class="btn btn-success">Vissza</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
