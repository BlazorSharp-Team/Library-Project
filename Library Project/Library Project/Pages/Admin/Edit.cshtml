@page
@model Library_Project.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Books</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Books.Id" />
            <div class="form-group">
                <label asp-for="Books.Title" class="control-label"></label>
                <input asp-for="Books.Title" class="form-control" />
                <span asp-validation-for="Books.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.isbnNumber" class="control-label"></label>
                <input asp-for="Books.isbnNumber" class="form-control" />
                <span asp-validation-for="Books.isbnNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Author" class="control-label"></label>
                <input asp-for="Books.Author" class="form-control" />
                <span asp-validation-for="Books.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Publisher" class="control-label"></label>
                <input asp-for="Books.Publisher" class="form-control" />
                <span asp-validation-for="Books.Publisher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Category" class="control-label"></label>
                <input asp-for="Books.Category" class="form-control" />
                <span asp-validation-for="Books.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.PublishDate" class="control-label"></label>
                <input asp-for="Books.PublishDate" class="form-control" />
                <span asp-validation-for="Books.PublishDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Books.Quantity" class="control-label"></label>
                <input asp-for="Books.Quantity" class="form-control" />
                <span asp-validation-for="Books.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
