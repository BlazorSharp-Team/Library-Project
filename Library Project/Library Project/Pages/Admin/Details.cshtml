        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Publisher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Publisher)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.Category)
        </dd>
        <dt class="col-sm-2">
