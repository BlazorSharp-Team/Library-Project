            @Html.DisplayFor(model => model.Books.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Books.isbnNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Books.isbnNumber)
        </dd>
